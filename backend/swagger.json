{
  "openapi": "3.0.2",
  "info": {
      "title": "pank-main",
      "version": "1.0.0"
  },
  "servers": [
    {
        "url": "http://localhost:9000",
        "description": "Local server for testing purposes"
    }
],
  "paths": {
      "/auth/register": {
          "post": {
              "requestBody": {
                  "content": {
                      "application/json": {
                          "schema": {
                              "$ref": "#/components/schemas/postRegisterUserResponse"
                          }
                      }
                  },
                  "required": true
              },
              "servers": [
                  {
                      "url": "http://localhost:9000",
                      "description": "register user"
                  }
              ],
              "tags": [
                  "register"
              ],
              "responses": {
                  "200": {
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/schemas/postRegisterUserResponse"
                              }
                          }
                      },
                      "description": "User and Account created succsessfully."
                  },
                  "409": {
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/schemas/emailExistsAlready"
                              }
                          }
                      },
                      "description": "Email exists."
                  }
              },
              "summary": "RegisterUser"
          }
      },
      "/auth/session": {
        "post": {
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/postLoginResponse"
                        }
                    }
                },
                "required": true
            },

            "tags": [
                "session"
            ],
            "responses": {
                "200": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/postLoginResponseSuccess"
                            }
                        }
                    },
                    "description": "User logged in successfully."
                },
                "400": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/wrongLoginInput"
                            }
                        }
                    },
                    "description": "User has added either the wrong email or password."
                }
            },
            "summary": "Login a user & start a session."
        }
    }
  },
  "components": {
      "schemas": {
          "postRegisterUserResponse": {
              "title": "Root Type for registerUser",
              "description": "",
              "type": "object",
              "properties": {
                  "name": {
                      "description": "Name of the user for paperwork. Needs to be 6 letters long because JOI is doing the input validation.",
                      "type": "string"
                  },
                  "email": {
                      "description": "Email for loggining in and checking that users do not repeat.",
                      "type": "string"
                  },
                  "password": {
                      "description": "For sigining into the bank, Needs to be 6 letters long because JOI is doing the validation.",
                      "type": "string"
                  }
              },
              "example": {
                  "name": "Toomas",
                  "email": "tom@gmail.com",
                  "password": "qwerty"
              }
          },
          "postLoginResponse": {
            "title": "Root Type for logging user in",
            "description": "",
            "type": "object",
            "properties": {
                "email": {
                    "description": "Email for loggining in and checking that users do not repeat.",
                    "type": "string"
                },
                "password": {
                    "description": "For sigining into the bank, Needs to be 6 letters long because JOI is doing the validation.",
                    "type": "string"
                }
            },
            "example": {
                "email": "tom@gmail.com",
                "password": "qwerty"
            }
        },
        "postLoginResponseSuccess": {
          "title": "Root Type for logging user in",
          "description": "",
          "type": "object",
          "properties": {
              "email": {
                  "description": "Email for loggining in and checking that users do not repeat.",
                  "type": "string"
              },
              "password": {
                  "description": "For sigining into the bank, Needs to be 6 letters long because JOI is doing the validation.",
                  "type": "string"
              }
          },
          "example": {
            "message": "Logged in",
            "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJfaWQiOiI1Zjc5YmZhYTRmYjI1NTUwNjgyY2FlODAiLCJpYXQiOjE2MDE4MjE0Nzl9.t0H3PgknnFi5B0jaZTtYPycJYHQeedW_zPxEF7M8Oo0"
          }
      },
        "wrongLoginInput": {
          "title": "Root Type for errorResponse",
          "description": "Response body for all errors",
          "type": "object",
          "properties": {
              "error": {
                  "type": "string"
              }
          },
          "example": {
              "error": "Wrong password"
          }
      },
          "errorResponse": {
              "title": "Root Type for errorResponse",
              "description": "Response body for all errors",
              "type": "object",
              "properties": {
                  "error": {
                      "type": "string"
                  }
              },
              "example": {
                  "error": "Error description here"
              }
          },
          "emailExistsAlready": {
              "title": "Root Type for emailExistsAlready",
              "description": "Server checks if the new user email already exists",
              "type": "object",
              "properties": {
                  "response": {
                      "description": "Email already exists.",
                      "type": "string"
                  }
              },
              "example": {
                  "response": "Email already exists"
              }
          }
      }
  }
}